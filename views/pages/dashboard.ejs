<div class="flex h-full" style="height: calc(100vh - 85px);">
    <aside class="w-1/3 max-w-xs bg-gray-800 p-4 border-r border-gray-700 flex flex-col">
        <h2 class="text-lg font-bold text-white mb-4">Connections</h2>
        <div id="connection-list" class="flex-grow overflow-y-auto">
            <p class="text-gray-400 text-sm">Loading connections...</p>
        </div>
        <button id="add-connection-btn" class="mt-4 w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition-colors">
            + Add Connection
        </button>
    </aside>

    <main class="w-2/3 flex-grow p-6 bg-gray-900 overflow-y-auto">
        <div id="workspace" class="hidden">
            <div class="flex justify-between items-center">
                <h1 class="text-3xl font-bold text-white mb-4" id="workspace-title"></h1>
                <button id="close-connection-btn" class="bg-red-600 hover:bg-red-700 text-white text-xs font-bold py-1 px-3 rounded">Close Connection</button>
            </div>
            
            <div class="border-b border-gray-700 mb-6">
                <nav id="workspace-tabs" class="flex space-x-8" aria-label="Tabs">
                    <a href="#" data-tab="analytics" class="tab-item active-tab">Analytics</a>
                    <a href="#" data-tab="query" class="tab-item">Query Executor</a>
                    <a href="#" data-tab="history" class="tab-item">History</a>
                </nav>
            </div>

            <div id="tab-content">
                <div id="analytics-content" class="tab-pane"></div>
                <div id="query-content" class="tab-pane hidden"></div>
                <div id="history-content" class="tab-pane hidden"></div>
            </div>
        </div>
        <div id="workspace-placeholder">
            <p class="text-gray-400 text-center mt-20 text-lg">Select a database connection from the left sidebar to get started.</p>
        </div>
    </main>
</div>